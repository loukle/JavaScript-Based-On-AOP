<script>
			$(document).ready(function disableFormSubmitButton(){ 
			   $("form").each(function(){ //设置切点
			    $('input[type="submit"]').click(function(){//找到点击事件
               $(this).prop("disabled",true);//更改disabled属性值
			   });
			   });
		    });
</script>
